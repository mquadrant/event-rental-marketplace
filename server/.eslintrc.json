{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "no-var": "off",
        "prettier/prettier": "error",
        "spaced-comment": "off",
        "no-console": "warn",
        "func-names": "off",
        "object-shorthand": "off",
        "no-underscore-dangle": "off",
        "no-return-await": "off",
        "no-param-reassign": "off",
        "no-process-exit": "off",
        "consistent-return": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "req|res|val|next" }
        ],
        "no-use-before-define": "off"
    }
}
